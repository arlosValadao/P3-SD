<!DOCTYPE html>
<html>
<head>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <h3>Histórico de medições para sensor analógico:</h3>
    <canvas id="myChart"></canvas>

    <script>
        const ctx = document.getElementById('myChart').getContext('2d');
        const labels = [
            {% for value in dados %}
                '{{ value }}',
            {% endfor %}
        ];
        const data = {
            labels: labels,
            datasets: [{
                label: 'Line Graph',
                data: [
                    {% for value in dados %}
                        {{ value }},
                    {% endfor %}
                ],
                fill: false,
                borderColor: 'rgb(75, 192, 192)',
                tension: 10
            }]
        };

        const options = {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        };

        const myChart = new Chart(ctx, {
            type: 'line',
            data: data,
            options: options
        });
    </script>
</body>
</html>


